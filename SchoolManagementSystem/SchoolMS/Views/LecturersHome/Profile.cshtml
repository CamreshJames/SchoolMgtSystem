@model SchoolMS.Models.Lecturer
@{
    ViewData["Title"] = "Profile";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .profile-container {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        margin-top: 50px;
    }

    .profile-picture {
        flex: 0 0 200px;
        margin-right: 30px;
    }

    .profile-data {
        flex: 1;
    }

    .profile-image {
        width: 100%;
        height: auto;
        border-radius: 50%;
    }

    .profile-details {
        margin-top: 20px;
    }

        .profile-details p {
            margin-bottom: 10px;
        }

    .profile-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }
</style>
<div class="container">
    <div class="profile-container">
        <div class="row">
            <div class="col-md-4">
                <div class="card card-primary profile-card">
                    <div class="card-body text-center">
                        <div class="profile-picture">
                            @if (string.IsNullOrEmpty(ViewBag.ProfileImage))
                            {
                                <img class="profile-image" src="~/ProfileImages/Profileplaceholder.png" alt="Profile Picture">
                            }
                            else
                            {
                                <img class="profile-image" src="@ViewBag.ProfileImage" alt="Profile Picture">
                            }
                        </div>
                        <p class="text-center">@Html.DisplayFor(model => model.Name)</p>
                        <p class="text-center">@Html.DisplayFor(model => model.UserName)</p>
                        <div class="form-group">
                            <a asp-area="" asp-controller="LecturersHome" asp-action="UpdateProfile"><button class="btn btn-primary w-100 mt-1">Edit Profile</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-primary profile-card">
                    <div class="card-body profile-data">
                        <div>
                            <h1>@ViewBag.lecturerName</h1>
                            <div class="profile-details">
                                <h4>Hello, @Html.DisplayFor(model => model.Name)!</h4>
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.School)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.School)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.UserName)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Email)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.PhoneNumber)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Gender)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Address)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Address)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Qualifications)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Qualifications)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Position)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Position)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Specialization)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Specialization)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.CoursesTaught)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.CoursesTaught)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.OfficeLocation)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.OfficeLocation)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.OfficeHours)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.OfficeHours)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Nationality)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Nationality)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.NationalId)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.NationalId)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
