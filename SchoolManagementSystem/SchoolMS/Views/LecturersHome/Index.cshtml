@model SchoolMS.Models.Lecturer
@{
    ViewData["Title"] = "My Portal";
}
    
<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h3>Welcome, @ViewBag.lecturerName!</h3>
                <section class="content">
                    <div class="container-fluid">
                        <h1>Welcome to the Lecturer Dashboard!</h1>

                        <div class="row">
                            <div class="col-lg-3 col-6">
                                <!-- Widget: Total Students -->
                                <div class="small-box bg-primary">
                                    <div class="inner">
                                        <h3>25</h3>
                                        <p>Total Students</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                            <div class="col-lg-3 col-6">
                                <!-- Widget: Courses Taught -->
                                <div class="small-box bg-info">
                                    <div class="inner">
                                        <h3>8</h3>
                                        <p>Courses Taught</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-book"></i>
                                    </div>
                                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                            <div class="col-lg-3 col-6">
                                <!-- Widget: Pending Approvals -->
                                <div class="small-box bg-warning">
                                    <div class="inner">
                                        <h3>5</h3>
                                        <p>Pending Approvals</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                            <div class="col-lg-3 col-6">
                                <!-- Widget: Messages -->
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        <h3>10</h3>
                                        <p>New Messages</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </section>

                
            </div>
        </div>
    </div>
</div>