@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="content">
                <p class="heading">
                    Welcome to SchoolMS!
                </p>
                <p class="para">
                    <h1>Lectures</h1>
                    Welcome to an exciting journey of learning, growth, and new possibilities.
                    We are thrilled to have you join our school community.
                    Explore the diverse range of courses, engage with passionate teachers, and unleash your potential.
                </p>
                <button class="btn"><a class="nav-link text-white" asp-area="" asp-controller="PendingLecturer" asp-action="index">Register Now</a></button>
            </div>
        </div>
    </div>
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="content">
                <p class="heading">
                    Apply to Join SchoolMS
                </p>
                <p class="para">
                    <h1>Students</h1>
                    Ready to embark on a transformative educational experience?
                    Apply now to join SchoolMS and unlock a world of knowledge, opportunities, and friendships.
                    Our dedicated team is here to guide you through the application process and support your aspirations.
                </p>
                <button class="btn"><a class="nav-link text-white" asp-area="" asp-controller="PendingStudent" asp-action="index">Apply Now</a></button>
            </div>
        </div>
    </div>
</div>
@model List<SchoolMS.Models.Student>
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @TempData["SuccessMessage"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#successModal').modal('show');
    });
</script>

